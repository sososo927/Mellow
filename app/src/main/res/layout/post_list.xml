<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostListActivity"
    android:id="@+id/post_list">

    <!-- 検索ビュー -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="88dp"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border_button" />

    <!-- ボタン群 -->
    <ImageButton
        android:id="@+id/love_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/love"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_view" />

    <ImageButton
        android:id="@+id/human_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/human"
        app:layout_constraintEnd_toStartOf="@+id/love_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_view" />

    <ImageButton
        android:id="@+id/people_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/people"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/love_button"
        app:layout_constraintTop_toBottomOf="@id/search_view" />


    <ProgressBar
        android:id="@+id/human_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:progress="100"
        android:progressTint="@color/blue"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/human_button"
        app:layout_constraintStart_toStartOf="@id/human_button"
        app:layout_constraintEnd_toEndOf="@id/human_button" />

    <ProgressBar
        android:id="@+id/love_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:progress="100"
        android:progressTint="@color/blue"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/love_button"
        app:layout_constraintStart_toStartOf="@id/love_button"
        app:layout_constraintEnd_toEndOf="@id/love_button" />

    <ProgressBar
        android:id="@+id/people_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:progress="100"
        android:progressTint="@color/blue"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/people_button"
        app:layout_constraintStart_toStartOf="@id/people_button"
        app:layout_constraintEnd_toEndOf="@id/people_button" />


    <!-- ページ切り替えビュー -->

    <!-- ユーザーアイコン -->

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/love_button"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="60dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/ic_menu_gallery" />

    <!-- 投稿ボタン -->
    <ImageButton
        android:id="@+id/post_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_width="74dp"
        android:layout_height="66dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="56dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/post_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>